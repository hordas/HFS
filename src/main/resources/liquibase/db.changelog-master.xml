         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <preConditions>
        <dbms type="mysql"/>
        <runningAs username="root"/>
    </preConditions>

    <changeSet id="1" author="ay.dyomin">

        <createTable tableName="Users">
